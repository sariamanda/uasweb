<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/top" />

        <ImageView
            android:id="@+id/gambar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/top"
            android:layout_marginTop="10dp"
            android:src="@drawable/gambar" />

        <ImageView
            android:id="@+id/box"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/top"
            android:layout_marginTop="50dp"
            android:src="@drawable/box" />

        <ImageView
            android:id="@+id/gambarr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/bwh"
            android:layout_marginTop="20dp"
            android:src="@drawable/gbr" />
        <ImageView
            android:id="@+id/boxx"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/foto"
            android:layout_marginTop="100dp"
            android:src="@drawable/box" />

        <TextView
            android:id="@+id/tvttgkami"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:fontFamily="cursive"
            android:text="Tentang Kami"
            android:textColor="#000000"
            android:textSize="40dp" />
        <ImageView
            android:id="@+id/foto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tvttgkami"
            android:layout_marginTop="10dp"
            android:src="@drawable/foto" />
        <ImageView
            android:id="@+id/word"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/foto"
            android:layout_marginTop="15dp"
            android:src="@drawable/word" />
        <ImageView
            android:id="@+id/bwh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/word"
            android:layout_marginTop="15dp"
            android:src="@drawable/bwh" />
        <ImageView
            android:id="@+id/ask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/bwh"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="300dp"
            android:src="@drawable/ic_ask" />
        <ImageView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/bwh"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="240dp"
            android:src="@drawable/ic_email" />
        <ImageView
            android:id="@+id/kotak"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/email"
            android:layout_marginTop="41dp"
            android:src="@drawable/kotak" />

        <ImageButton
            android:id="@+id/btnhome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_marginTop="42dp"
            android:layout_marginLeft="50dp"
            app:srcCompat="@drawable/home" />

        <ImageButton
            android:id="@+id/btnhslvote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_marginTop="42dp"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@+id/btnhome"
            app:srcCompat="@drawable/hasilvote" />
        <ImageButton
            android:id="@+id/btnberita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_marginTop="42dp"
            android:layout_toRightOf="@+id/btnhslvote"
            android:layout_marginLeft="40dp"
            app:srcCompat="@drawable/htm" />
        <ImageButton
            android:id="@+id/btnakun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_marginTop="42dp"
            android:layout_toRightOf="@+id/btnberita"
            android:layout_marginLeft="40dp"
            app:srcCompat="@drawable/pilihakun" />


    </RelativeLayout>
</ScrollView>